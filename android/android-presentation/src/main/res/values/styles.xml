<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:popupMenuStyle">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:listPopupWindowStyle">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:dropDownListViewStyle">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:textAppearanceLargePopupMenu">@style/ThemeOverlay.AppCompat.Light</item>

    </style>

</resources>
